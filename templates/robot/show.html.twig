{% extends 'base.html.twig' %}

{% block title %}{{ robot.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ robot.name }}</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_robot_edit', {id: robot.id}) }}" class="btn btn-outline-primary">Edit</a>
            <form method="post" action="{{ path('app_robot_delete', {id: robot.id}) }}" onsubmit="return confirm('Are you sure you want to delete this robot?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ robot.id) }}">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0">Details</h5></div>
                <table class="table mb-0">
                    <tr>
                        <th>Owner</th>
                        <td>{{ robot.owner }}</td>
                    </tr>
                    <tr>
                        <th>Weapon</th>
                        <td><span class="badge bg-secondary">{{ robot.weapon.label }}</span></td>
                    </tr>
                    <tr>
                        <th>Locomotion</th>
                        <td>{{ robot.locomotion.label }}</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="card card-stats">
                        <div class="card-body">
                            <div class="display-6 text-success">{{ stats.wins }}</div>
                            <small class="text-muted">Wins</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card card-stats">
                        <div class="card-body">
                            <div class="display-6 text-danger">{{ stats.losses }}</div>
                            <small class="text-muted">Losses</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card card-stats">
                        <div class="card-body">
                            <div class="display-6">{{ stats.knockouts }}</div>
                            <small class="text-muted">Knockouts</small>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card card-stats">
                        <div class="card-body">
                            <div class="display-6">{{ stats.battles_fought }}</div>
                            <small class="text-muted">Battles Fought</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_robot_index') }}" class="btn btn-secondary">Back to Robots</a>
{% endblock %}
