{% extends 'base.html.twig' %}

{% block title %}{{ battle.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>{{ battle.name }}</h1>
            <p class="text-muted mb-0">
                {{ battle.dateTime|date('M j, Y H:i') }}
                {% if battle.status == 'completed' %}
                    <span class="badge bg-success ms-2">Completed</span>
                {% else %}
                    <span class="badge bg-primary ms-2">Scheduled</span>
                {% endif %}
            </p>
        </div>
        <div class="d-flex gap-2">
            {% if not battle.completed %}
                <a href="{{ path('app_battle_edit', {id: battle.id}) }}" class="btn btn-outline-primary">Edit</a>
            {% endif %}
            <form method="post" action="{{ path('app_battle_delete', {id: battle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this battle?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ battle.id) }}">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0">Participants</h5></div>
                {% if battle.participants|length > 0 %}
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Robot</th>
                                <th>Owner</th>
                                <th>Weapon</th>
                                {% if battle.completed %}
                                    <th>Score</th>
                                    <th>Result</th>
                                {% else %}
                                    <th>Actions</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for participant in battle.participants %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_robot_show', {id: participant.robot.id}) }}">
                                            {{ participant.robot.name }}
                                        </a>
                                    </td>
                                    <td>{{ participant.robot.owner }}</td>
                                    <td><span class="badge bg-secondary">{{ participant.robot.weapon.label }}</span></td>
                                    {% if battle.completed %}
                                        <td><strong>{{ participant.score }}</strong></td>
                                        <td>
                                            {% if participant.score > 0 %}
                                                <span class="badge bg-success">Winner</span>
                                                {% if participant.knockout %}
                                                    <span class="badge badge-knockout">KO</span>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge bg-danger">Lost</span>
                                            {% endif %}
                                        </td>
                                    {% else %}
                                        <td>
                                            <form method="post" action="{{ path('app_battle_remove_robot', {id: battle.id, pid: participant.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('remove_robot' ~ participant.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this robot?')">Remove</button>
                                            </form>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="card-body text-muted">No robots added to this battle yet.</div>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-4">
            {% if not battle.completed %}
                <div class="card mb-4">
                    <div class="card-header"><h5 class="mb-0">Add Robot</h5></div>
                    <div class="card-body">
                        {{ form_start(add_robot_form) }}
                            <div class="mb-3">
                                {{ form_widget(add_robot_form.robot, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(add_robot_form.robot) }}
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add to Battle</button>
                        {{ form_end(add_robot_form) }}
                    </div>
                </div>

                {% if score_form %}
                    <div class="card mb-4">
                        <div class="card-header"><h5 class="mb-0">Record Result</h5></div>
                        <div class="card-body">
                            {{ form_start(score_form) }}
                                <div class="mb-3">
                                    {{ form_label(score_form.winner, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(score_form.winner) }}
                                    {{ form_errors(score_form.winner) }}
                                </div>
                                <div class="mb-3">
                                    <div class="form-check">
                                        {{ form_widget(score_form.isKnockout, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(score_form.isKnockout, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success w-100">Record Result</button>
                            {{ form_end(score_form) }}
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

    <a href="{{ path('app_battle_index') }}" class="btn btn-secondary">Back to Battles</a>
{% endblock %}
