{% extends 'base.html.twig' %}

{% block title %}Battles{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Battles</h1>
        <a href="{{ path('app_battle_new') }}" class="btn btn-primary">Schedule New Battle</a>
    </div>

    {% if battles|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Participants</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for battle in battles %}
                        <tr>
                            <td>
                                <a href="{{ path('app_battle_show', {id: battle.id}) }}">{{ battle.name }}</a>
                            </td>
                            <td>{{ battle.dateTime|date('M j, Y H:i') }}</td>
                            <td>
                                {% if battle.status == 'completed' %}
                                    <span class="badge bg-success">Completed</span>
                                {% else %}
                                    <span class="badge bg-primary">Scheduled</span>
                                {% endif %}
                            </td>
                            <td>
                                {% for participant in battle.participants %}
                                    <span class="badge bg-secondary">{{ participant.robot.name }}</span>
                                {% else %}
                                    <span class="text-muted">None</span>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('app_battle_show', {id: battle.id}) }}" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            No battles scheduled yet. <a href="{{ path('app_battle_new') }}">Schedule one now!</a>
        </div>
    {% endif %}
{% endblock %}
